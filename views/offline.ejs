<%- include('partials/head') %>
<%- include('partials/nav') %>

<div class="container mx-auto mt-10">
  <h2 class="text-2xl font-bold mb-6">Offline Entry Form</h2>
  <form action="/offline" method="POST" class="bg-white p-6 rounded shadow-md max-w-lg">
    <input type="text" name="fullName" placeholder="Full Name" class="w-full p-2 border mb-4" required>
    <input type="text" name="address" placeholder="Address" class="w-full p-2 border mb-4" required>
    <input type="text" name="mobile" placeholder="Mobile" class="w-full p-2 border mb-4" required>
    <input type="email" name="email" placeholder="Email" class="w-full p-2 border mb-4" required>
    <input type="number" name="amountINR" placeholder="Amount (INR)" class="w-full p-2 border mb-4" required>
    <textarea name="comment" placeholder="Comment" class="w-full p-2 border mb-4"></textarea>
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Submit Entry</button>
  </form>
</div>

</body>

</html>