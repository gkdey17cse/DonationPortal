<%- include('partials/head') %>
<%- include('partials/nav') %>

<div class="container mx-auto mt-10 text-center">
  <h2 class="text-3xl font-bold text-green-600 mb-4">Payment Successful!</h2>
  <p class="mb-6">Thank you for your payment. Your details have been recorded.</p>

  <div class="space-x-3">
    <a href="/" class="bg-blue-600 text-white px-4 py-2 rounded">Go Home</a>

    <% if (donation && donation._id) { %>
      <a href="/receipt/<%= donation._id %>" target="_blank"
         class="bg-green-600 text-white px-4 py-2 rounded">
        Print Receipt
      </a>
    <% } else { %>
      <span class="inline-block bg-gray-300 text-gray-700 px-4 py-2 rounded cursor-not-allowed">
        Receipt Unavailable
      </span>
    <% } %>
  </div>
</div>

</body>
</html>
